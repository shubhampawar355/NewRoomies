@model User

<div class="row">
    <div class="col-md-9">
        <div class="col-md-2"></div>
        <div class="col-md-5">
            <form method="post" asp-action="ValidateUser">

                <h3 style="text-align: center;">Login Here</h3>
                <div class="form-group">
                    <label asp-for="Email">User Id</label>
                    <input asp-for="Email" class="form-control" placeholder="Enter UserId" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" placeholder="Enter Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="checkbox">
                    <label><input type="checkbox"> Remember me</label>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Login</button>
                    <button (click)="onCancel()" class="btn btn-danger" style="margin-left: 10px;">Cancel</button>
                    <!-- <button (click)="onSignup()"  class="btn btn-warning pull-right">Signup</button> -->
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a class="btn btn-link" href="forgotpass"
                                                                       role="button">Forget Password ?</a>
                </div>
            </form>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
